{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "./dist",
    "noEmit": false,
    "moduleResolution": "node",
    "isolatedModules": false,
    "incremental": false,
    "jsx": "react-jsx",
    "plugins": []
  },
  "include": [
    "src/types/diff_match_patch.d.ts",
    "src/types/openai_chat.d.ts",
    "src/types/upload/index.ts",
    "src/types/next-auth.d.ts",
    "src/workers/llmWorker.ts",
    "src/lib/**/*",
    "src/services/**/*",
    "src/scripts/manageLLMWorker.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/services/editor-service/**/*"
  ]
}
