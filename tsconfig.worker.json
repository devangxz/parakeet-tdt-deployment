{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "CommonJS",
        "outDir": "./dist",
        "noEmit": false,
        "moduleResolution": "node",
        "isolatedModules": false,
        "incremental": false,
        "jsx": "react",
        "plugins": []
    },
    "include": [
        "src/workers/**/*",
        "src/lib/**/*",
        "src/services/**/*",
        "src/scripts/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}